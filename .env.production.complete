# Meta Lingua Production Environment Configuration
# Complete AI Services Setup for Immediate Testing

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://username:password@localhost:5432/metalingua

# ==============================================  
# AI SERVICES CONFIGURATION (CRITICAL FOR CALLERN)
# ==============================================

# Ollama Configuration (Local AI Processing)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2:latest
# Alternative: mistral:7b-instruct-q5_K_M
OLLAMA_ENABLED=true
OLLAMA_TIMEOUT=30000

# Whisper Speech-to-Text (Critical for Callern)
WHISPER_API_URL=http://localhost:8000
WHISPER_ENABLED=true
WHISPER_TIMEOUT=30000
WHISPER_MODEL=whisper-1

# Coqui TTS Text-to-Speech (Critical for Callern)
TTS_API_URL=http://localhost:5002
TTS_ENABLED=true
TTS_VOICE_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
TTS_LANGUAGE=fa  # Persian default
TTS_TIMEOUT=30000

# OpenAI (Fallback - Optional)
OPENAI_API_KEY=your_openai_key_here
OPENAI_ENABLED=false

# ==============================================
# IRANIAN SERVICES CONFIGURATION
# ==============================================

# Kavenegar SMS Service (Iranian)
KAVENEGAR_API_KEY=your_kavenegar_api_key
KAVENEGAR_SENDER=your_sender_number
SMS_ENABLED=true

# Shetab Payment Gateway (Iranian)
SHETAB_MERCHANT_ID=your_merchant_id
SHETAB_TERMINAL_ID=your_terminal_id  
SHETAB_SECRET_KEY=your_shetab_secret_key_min_32_chars
SHETAB_GATEWAY_URL=https://payment.shetab.ir/api
SHETAB_CALLBACK_URL=https://yourdomain.com/api/payment/callback
PAYMENT_ENABLED=true

# Isabel VoIP Service (Iranian)
ISABEL_VOIP_ENABLED=true
ISABEL_VOIP_SERVER=your_isabel_server
ISABEL_VOIP_PORT=5060
ISABEL_VOIP_USERNAME=your_voip_username
ISABEL_VOIP_PASSWORD=your_voip_password
ISABEL_VOIP_RECORDING_ENABLED=true
ISABEL_VOIP_RECORDING_PATH=./recordings

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Node Environment
NODE_ENV=production
PORT=5000

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_very_secure_session_secret_here
SESSION_TIMEOUT=3600000  # 1 hour in milliseconds

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads
RECORDING_PATH=./recordings

# ==============================================
# CALLERN VIDEO CALLING CONFIGURATION
# ==============================================

# WebRTC Configuration
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your_turn_username
TURN_PASSWORD=your_turn_password
STUN_SERVER_URL=stun:stun.l.google.com:19302

# Socket.io Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:5000
SOCKET_IO_ENABLED=true

# ==============================================
# LOGGING & MONITORING
# ==============================================

# Log Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ERROR_LOG_FILE=./logs/error.log

# Performance Monitoring
PERFORMANCE_MONITORING=true
METRICS_ENABLED=true

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# CORS Configuration
CORS_ORIGIN=http://localhost:5000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=100  # requests per window

# Security Headers
HELMET_ENABLED=true
CSRF_PROTECTION=true

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================

# SMTP Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@metalingua.com
EMAIL_ENABLED=false

# ==============================================
# IRANIAN DEPLOYMENT SPECIFIC
# ==============================================

# Locale Configuration  
DEFAULT_LANGUAGE=fa
SUPPORTED_LANGUAGES=fa,en,ar
TIMEZONE=Asia/Tehran
CURRENCY=IRR

# Persian/Arabic Font Configuration
FONT_PATH=./assets/fonts
PERSIAN_FONT_FAMILY=IRANSans

# Iranian Phone Number Format
PHONE_COUNTRY_CODE=+98
PHONE_REGEX=^(\+98|0)?9\d{9}$

# ==============================================
# DEVELOPMENT/DEBUG (Set to false in production)
# ==============================================

DEBUG=false
VERBOSE_LOGGING=false
SQL_LOGGING=false
MOCK_SERVICES=false