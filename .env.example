# Meta Lingua Platform Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
NODE_ENV=production
PORT=5000
APP_URL=https://yourdomain.com

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://metalingua:your_password@localhost:5432/metalingua
DB_NAME=metalingua
DB_USER=metalingua
DB_PASSWORD=changeme_strong_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Secrets (Generate strong random strings)
JWT_SECRET=your_very_long_random_jwt_secret_key_here
REFRESH_SECRET=your_very_long_random_refresh_secret_key_here

# AI Services (Self-hosted Ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# Iranian SMS Service (Kavenegar)
KAVENEGAR_API_KEY=your_kavenegar_api_key_here

# Iranian Payment Gateway (Shetab)
SHETAB_MERCHANT_ID=your_merchant_id
SHETAB_TERMINAL_ID=your_terminal_id
SHETAB_API_KEY=your_shetab_api_key
SHETAB_GATEWAY_URL=https://sep.shaparak.ir/payment.aspx
SHETAB_CALLBACK_URL=https://yourdomain.com/api/payment/callback

# VoIP Configuration (Isabel)
ISABEL_VOIP_SERVER=your_voip_server
ISABEL_VOIP_USER=your_voip_username
ISABEL_VOIP_PASSWORD=your_voip_password
ISABEL_VOIP_DOMAIN=your_voip_domain

# WebRTC/TURN Server (Self-hosted)
TURN_SERVER_URL=turn:yourdomain.com:3478
TURN_SERVER_USERNAME=turnuser
TURN_SERVER_PASSWORD=turnpassword
STUN_SERVER_URL=stun:yourdomain.com:3478

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,docx,mp4,webm

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=86400000

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=Meta Lingua <noreply@yourdomain.com>

# Security Settings
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_DIR=/app/logs

# Backup Settings
BACKUP_DIR=/backup
BACKUP_RETENTION_DAYS=30

# Performance
WORKER_THREADS=4
MAX_CONNECTIONS=100

# Feature Flags
ENABLE_CALLERN=true
ENABLE_VIDEO_RECORDING=true
ENABLE_AI_SUPERVISOR=true
ENABLE_GAMIFICATION=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PAYMENT_GATEWAY=true

# Development Only (Remove in production)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-...