# MetaLingua Production Environment Configuration
# Copy this file to .env and fill in all required values

# ============================================
# CRITICAL - REQUIRED IN PRODUCTION
# ============================================

# JWT Secret Key - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# MUST be at least 32 characters, use cryptographically secure random string
JWT_SECRET=

# PostgreSQL Database Connection
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=

# Environment (MUST be 'production' for production deployment)
NODE_ENV=production

# Server Port
PORT=5000

# ============================================
# AI SERVICES (Optional but recommended)
# ============================================

# Ollama AI Server (Iranian self-hosted)
# Example: http://45.89.239.250:11434
OLLAMA_HOST=

# ============================================
# IRANIAN EXTERNAL SERVICES
# ============================================

# Kavenegar SMS Service (Required for SMS notifications)
KAVENEGAR_API_KEY=

# Shetab Payment Gateway (Required for payments)
SHETAB_MERCHANT_ID=
SHETAB_TERMINAL_ID=
SHETAB_SECRET_KEY=
SHETAB_GATEWAY_URL=
SHETAB_CALLBACK_URL=

# Isabel VoIP Service (Required for phone integration)
ISABEL_VOIP_ENABLED=true
ISABEL_VOIP_SERVER=
ISABEL_VOIP_PORT=5060
ISABEL_VOIP_USERNAME=
ISABEL_VOIP_PASSWORD=
ISABEL_VOIP_RECORDING_ENABLED=true
ISABEL_VOIP_RECORDING_PATH=./recordings

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Server Instance ID (for multi-server deployments)
SERVER_INSTANCE_ID=server-01

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================
# DEPLOYMENT CHECKLIST
# ============================================
# Before deploying to production:
# [ ] Generate secure JWT_SECRET (at least 32 characters)
# [ ] Configure DATABASE_URL with production PostgreSQL
# [ ] Set NODE_ENV=production
# [ ] Configure all required Iranian services
# [ ] Test all environment variables with: npm run validate:env
# [ ] Run database migrations: npm run db:push
# [ ] Test server startup: npm start
